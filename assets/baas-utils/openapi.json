  "paths": {
    "/operation-rules": {
      "get": {
        "description": "Rules affect the times and days when operations are available",
        "operationId": "GetOperationRules",
        "tags": [
          "Operation Rules"
        ],
        "summary": "Operation rules",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Bearer token",
            "schema": {
              "type": "string"
            },
            "required": true,
            "example": "Bearer eyJhbGciOiJSUzI1NiIsInR5cCIgOiAiSlicVN5VzljIn0"
          },
          {
            "in": "query",
            "name": "status",
            "description": "Filter rules by status",
            "schema": {
              "type": "string",
              "enum": [
                "ACTIVE",
                "INACTIVE"
              ]
            },
            "example": "INACTIVE"
          }
        ],
        "responses": {
          "200": {
            "description": "Rules successfully listed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid",
                        "example": "0938e85f-c188-464c-a1c2-c19bc660f93a"
                      },
                      "name": {
                        "type": "string",
                        "example": "TED"
                      },
                      "description": {
                        "type": "string",
                        "example": "TED 7h-17h"
                      },
                      "start_time": {
                        "type": "string",
                        "description": "The time the operation becomes available",
                        "example": "07:00:00"
                      },
                      "end_time": {
                        "type": "string",
                        "description": "The time the operation becomes unavailable",
                        "example": "17:00:00"
                      },
                      "is_business_days_only": {
                        "type": "boolean",
                        "description": "If true, the operation is only available on business days",
                        "example": true
                      },
                      "status": {
                        "type": "string",
                        "enum": [
                          "ACTIVE",
                          "INACTIVE"
                        ],
                        "example": "ACTIVE"
                      },
                      "created_at": {
                        "type": "string",
                        "example": "2021-07-23T16:58:27.000Z"
                      },
                      "updated_at": {
                        "type": "string",
                        "description": "The date the rule was last updated",
                        "example": "2022-10-20T12:51:18.000Z"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal error [InternalServerError].",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "title": "Internal Server Error",
                      "properties": {
                        "code": {
                          "type": "string",
                          "title": "Error code",
                          "description": "The type of error",
                          "example": "INTERNAL_SERVER_ERROR",
                          "enum": [
                            "INTERNAL_SERVER_ERROR"
                          ]
                        },
                        "message": {
                          "type": "string",
                          "title": "Error message",
                          "description": "Describes a message informing a reason for the error",
                          "example": "Internal server failure"
                        },
                        "status_code": {
                          "type": "number",
                          "description": "Error status code",
                          "example": "500"
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "bearerFormat": "JWT",
        "scheme": "bearer",
        "description": "Bearer auth (https://developer.mozilla.org/en-US/docs/Web/HTTP/Authentication)."
      }
    },
    "schemas": {
      "InternalServerError": {
        "title": "Internal Server Error",
        "properties": {
          "code": {
            "type": "string",
            "title": "Error code",
            "description": "The type of error",
            "example": "INTERNAL_SERVER_ERROR",
            "enum": [
              "INTERNAL_SERVER_ERROR"
            ]
          },
          "message": {
            "type": "string",
            "title": "Error message",
            "description": "Describes a message informing a reason for the error",
            "example": "Internal server failure"
          },
          "status_code": {
            "type": "number",
            "description": "Error status code",
            "example": "500"
          }
        }
      }
    }
  }
